%html
  %head
    %title Countdown to Aruba
    %link(rel="stylesheet" href="styles.css")
    %script{type: "text/javascript", src: "//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"}
    %script{type: "text/javascript", src: "//ajax.googleapis.com/ajax/libs/jqueryui/1.9.0/jquery-ui.min.js"}
    %script{type: "text/javascript", src: "application.js"}
    %script{type: "text/javascript", src: "jquery.kinetic.js"}
    %script{type: "text/javascript", src: "jquery.mousewheel.min.js"}
    %script{type: "text/javascript", src: "jquery.smoothdivscroll-1.3-min.js"}
    :javascript
      window.sun_times = {
        sunrise: new Date("#{@sunrise.to_i}" * 1000),
        sunset: new Date("#{@sunset.to_i}" * 1000)
      }


  %body
    #content
      #departure
        %h1#countdown= @days_to_departure
        %h2 days to departure
      #weather
        = render(:haml, :weather)
      %div#scrollingText
        %p#ticker
    #footer
      %p
        This is a Notingham production by
        %a{href: "https://twitter.com/Lavinia666"}@Lavinia666
        and
        %a{href: "https://twitter.com/DevLCSC"}@DevLCSC
  :javascript
      jQuery(document).ready(function () {
        jQuery("#scrollingText").smoothDivScroll({
          autoScrollingInterval: 25,
          hotSpotScrolling: false,
          autoScrollingMode: "onStart"

        });
      });
